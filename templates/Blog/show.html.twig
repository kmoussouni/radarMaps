    <div class="container">

        <div class="content">

            <div class="column is-10 article" >
                <div class="box">
                    <div class="has-text-centered">
                        <div class="post-header">
                            <img src="{{ asset(article.image.filePath)|replace({'public/': ""}) }}">
                            <hr>
                            <h4 class="title is-4 is-spaced">{{ article.title }}</h4>
                            <h5 class="subtitle is-5"><i>{{ article.subtitle }}</i></h5>
                            <hr>
                        </div>
                    </div>
                    <div class="content-wrapper">
                        <p class="has-text-justified">{{ article.body|raw }}</p>
                    </div>
                    <div class="end-post-details">
                        <div class="is-pulled-left">
                            <i>{{ article.createdAt|date }} by <a>{{ article.user.username }}</a></i>
                        </div>
                        <div class="is-pulled-right">
                            <a>#blog</a> <a>#me</a> <a>#fun</a>
                        </div>
                    </div>
                    <hr>
                    <div class="author-content">
                        <article class="media">
                            <div class="media-left">
                                <figure class="image is-64x64">
                                    <img src="{{ asset('build/img/profile.jpg') }}" alt="Image">
                                </figure>
                            </div>
                            <div class="media-content">
                                <div class="content">
                                    <strong>{{ article.user.username }}</strong>
                                    <p>{{ 'card.content.label'|trans }}</p>
                                </div>
                            </div>
                        </article>
                    </div>
                    <hr>
                    <div class="end-content-nav-wrapper">
                        <div class="is-pulled-left">
                            <a href="{{ path('blog') }}">
                                <i class="fa fa-angle-double-left" aria-hidden="true"> Back to Home</i>
                            </a>
                        </div>
                    </div>

                </div>

